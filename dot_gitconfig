# ~/.gitconfig
[user]
  name = Your Name
  email = your.email@example.com
[color]
  ui = auto
[core]
  editor = nano
  autocrlf = input
[init]
  defaultBranch = main
[alias]
  st = status
  co = checkout
  br = branch
  ci = commit
  lg = log --graph --oneline --all
  last = log -1 HEAD
[status]
  short = true
[diff]
  colorMoved = default
